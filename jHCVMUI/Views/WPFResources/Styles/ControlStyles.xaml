<ResourceDictionary x:Class="jHCVMUI.Views.WPFResources.Styles.ControlStyles"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:jHCVMUI.Views.WPFResources.Styles"
             mc:Ignorable="d" >
    <SolidColorBrush x:Key="TestingBrush" Color="Pink"/>

    <Style x:Key="EventFontStyle" TargetType="Control">
        <Setter Property="FontFamily" Value="Segio UI"/>
    </Style>

    <Style x:Key="RoundedCornersStyle" TargetType="Rectangle">
        <Setter Property="RadiusX" Value="7"/>
        <Setter Property="RadiusY" Value="7"/>
    </Style>

    <Style x:Key="ForegroundStyle" TargetType="Control">
        <Setter Property="Foreground" Value="Violet"/>
    </Style>

    <Style x:Key="RoundButtonStyle" TargetType="Button" BasedOn="{StaticResource ForegroundStyle}">
        <Setter Property="Background" Value="Beige"/>
    </Style>

    <Style TargetType="TextBox" x:Key="TextBoxStyle" BasedOn="{StaticResource ForegroundStyle}">
        <Setter Property="Background" Value="Red"></Setter>
    </Style>


</ResourceDictionary>
