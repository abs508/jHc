<ResourceDictionary x:Class="jHCVMUI.Views.WPFResources.Styles.ListBoxStyles"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:jHCVMUI.Views.WPFResources.Styles"
             mc:Ignorable="d" >
    <Style x:Key="BodyListBoxItemBorder" TargetType="Border">
        <Setter Property="BorderBrush" Value="{StaticResource ControlBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="2"/>
    </Style>

    <Style x:Key="BodyListBoxItemTextBlock" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource ControlForeground}"/>
        <Setter Property="Padding" Value="3"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>
